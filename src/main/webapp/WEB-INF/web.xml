<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         id="WebApp_ID" version="3.1">
    <display-name>SummaryTask4</display-name>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/WEB-INF/jsp/error_page.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/jsp/error_page.jsp</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/WEB-INF/jsp/error_page.jsp</location>
    </error-page>
    <description>MySQL</description>
    <resource-ref>
        <description>MySQL DB Connection Pool</description>
        <res-ref-name>jdbc/simple_shop</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <display-name>Log4jWeb</display-name>
    <context-param>
        <param-name>log4j-config-location</param-name>
        <param-value>WEB-INF/log4j.properties</param-value>
    </context-param>
    <context-param>
        <param-name>
            javax.servlet.jsp.jstl.fmt.localizationContext
        </param-name>
        <param-value>text</param-value>
    </context-param>
    <context-param>
        <param-name>captchaAge</param-name>
        <param-value>120000</param-value>
    </context-param>
    <context-param>
        <param-name>captchaStorage</param-name>
        <param-value>HIDDEN</param-value>
    </context-param>
    <context-param>
        <param-name>localeStorage</param-name>
        <param-value>COOKIE</param-value>
    </context-param>
    <context-param>
        <param-name>localeStorageMaxAge</param-name>
        <param-value>3600</param-value>
    </context-param>
    <context-param>
        <param-name>supportedLanguages</param-name>
        <param-value>ru, en</param-value>
    </context-param>
    <context-param>
        <param-name>defaultLanguage</param-name>
        <param-value>en</param-value>
    </context-param>
    <multipart-config>
        <location>/photos</location>
        <max-file-size>20848820</max-file-size>
        <max-request-size>418018841</max-request-size>
        <file-size-threshold>1048576</file-size-threshold>
    </multipart-config>
</web-app>